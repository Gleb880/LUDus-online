    body
        .page
            header.header 
                .header__content
                    a.logo(href="/")
                        h1.logo__title LIDus
                    nav.main-nav.header__center
                        ul.main-nav__list 
                            li.main-nav__item 
                                a.main-nav__link.main-nav__link_active(href="#") Information 
                            li.main-nav__item 
